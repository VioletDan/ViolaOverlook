/**标准16:9*/

.index .bg {
  width: 100%;
  height: 151rpx;
  position: absolute;
  top: 0;
}

.index .content {
  margin-bottom: 100rpx;
}

.index .content .card {
  width: 750rpx;
  height: 414rpx;
}

.index .content .inner {
  padding: 0 30rpx;
  color: #0774ff;
}

.index .content .inner .date {
  font-size: 22rpx;
  margin-bottom: 45rpx;
}

.index .content .inner .h4 {
  font-size: 32rpx;
  margin-top: 24rpx;
  padding-bottom: 17rpx;
  position: relative;
  text-align: center;
  font-weight: bold;
}

.index .content .inner .h4::after {
  content: '';
  display: block;
  width: 60rpx;
  height: 4rpx;
  background: #0774ff;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -30rpx;
  border-radius: 1px;
}

.index .content .inner .h5 {
  font-size: 24rpx;
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}

.index .content .inner .txt1 {
  font-size: 20rpx;
  line-height: 1.5;
}

.index .content .btn {
  width: 750rpx;
  height: 169rpx;
}

.index .title {
  color: #333;
  width: 100%;
  text-align: center;
  padding: 20rpx 0;
  font-family: 'Bitstream Vera Serif Bold';
  position: fixed;
  top: 0;
  left: 0;
  background-color: #f1f8fe;
  z-index: 1;
}

.article {
  overflow-y: auto;
  overflow-x: hidden;
}

/* recommend-feed */

#recommend-feed {
  height: 100%;
  margin-top: 80rpx;
  /* padding-bottom: 130rpx; */
}

#recommend-feed .feed-item {
  display: block;
  padding: 35rpx 35rpx 35rpx 0;
  margin-left: 35rpx;
  position: relative;
  color: #494949;
  /* border-bottom: 1rpx solid #e7e7e7; */
}

#recommend-feed .feed-item ~ .feed-item::before {
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  background: #e3e3e3;
  -webkit-transform: scaleY(0.5);
  content: '';
  position: absolute;
  -webkit-transform-origin: 0 bottom;
}

#recommend-feed .feed-content {
  overflow: hidden;
  margin-bottom: 20rpx;
}

#recommend-feed .feed-content .h3 {
  text-align: justify;
  font-size: 34rpx;
  font-weight: 500;
  line-height: 1.41;
  color: #494949;
  margin-bottom: 12rpx;
}

#recommend-feed .feed-content .p {
  overflow: hidden;
  text-align: justify;
  color: #aaa;
  font-size: 24rpx;
  line-height: 1.5;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

#recommend-feed .feed-content .cover {
  position: relative;
  width: 25.6%;
  margin-left: 36rpx;
  float: right;
}

#recommend-feed .feed-item .author {
  font-size: 24rpx;
  color: #ccc;
}

#recommend-feed .loadmore {
  margin-top: 25px;
  margin-bottom: 50px;
  margin-right: 18px;
  height: 40px;
  background: url(https://img3.doubanio.com/f/talion/bf2ef8c5c1a8c84dddfd1135656857e73582c5d8/pics/card/loading_grey.gif) 50% 50% no-repeat;
  background-size: 24px 24px;
}

